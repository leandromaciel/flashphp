{
    "name": "flashPHP/framework",
    "description": "FlashPHP Framework",
    "keywords": ["flashphp", "framework"],
    "type": "framework",
    "authors": [
        {
            "name": "Leandro Maciel",
            "email": "emaildoleandromaciel@gmail.com",
            "role": "developer"
        }
    ],

    "require": {
        "php": ">=7.0",
        "smarty/smarty": "~3.1",
        "aura/session": "2.1.*",
        "ircmaxell/random-lib": "1.2.*",
        "paragonie/random_compat": "2.*",
        "pear/log": "1.13.*",
        "wisembly/elephant.io": "^3.3"
    },

    "autoload": {
        "psr-4": {
            "FlashPHP\\Model\\Frontend\\": "src/Model/Frontend/",
            "FlashPHP\\Model\\Backend\\": "src/Model/Backend/",
            "FlashPHP\\Controller\\Frontend\\": "src/Controller/Frontend/",
            "FlashPHP\\Controller\\Backend\\": "src/Controller/Backend/",
            "FlashPHP\\Singleton\\Frontend\\": "src/Singleton/Frontend/",
            "FlashPHP\\Singleton\\Backend\\": "src/Singleton/Backend/",
            "FlashPHP\\Singleton\\": "src/Singleton/",
            "FlashPHP\\Helper\\": "src/Helper/",
            "FlashPHP\\Core\\": "src/Core/"
        }
    }
}
